import numpy as np
import cv2

img = cv2.imread("C:/Users/22354/Downloads/picture.jpg")

# cv2.copyMakeBorder() method is used to create a border around the image like a photo frame
# cv2.copyMakeBorder(src, top, bottom, left, right, borderType, value)
# src - img
# top - top border
# bottom - width of the lower border
# left - width of the left border
# right - width of the right border
# borderType
# value -  color code


# One color border
img_border = cv2.copyMakeBorder(img, 10,10,10,10, cv2.BORDER_CONSTANT, (0,0,255))
cv2.imshow('Image', img_border)
cv2.waitKey(0)
cv2.destroyWindow()

# he border will be mirror reflection of the border elements
img_border = cv2.copyMakeBorder(img, 100, 100, 50, 50, cv2.BORDER_REFLECT)
cv2.imshow('Image', img_border)
cv2.waitKey(0)
cv2.destroyWindow()

